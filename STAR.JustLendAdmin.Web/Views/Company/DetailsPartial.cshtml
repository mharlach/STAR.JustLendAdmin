        </div>
        <span asp-validation-for="ServiceInformation.SigningPrices.EDocPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceInformation.SigningPrices.Concurrent2nd" class="control-label"></label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input asp-for="ServiceInformation.SigningPrices.Concurrent2nd" class="form-control  col-4" />
        </div>
        <span asp-validation-for="ServiceInformation.SigningPrices.Concurrent2nd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceInformation.SigningPrices.AttorneyClosing" class="control-label"></label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input asp-for="ServiceInformation.SigningPrices.AttorneyClosing" class="form-control  col-4" />
        </div>
        <span asp-validation-for="ServiceInformation.SigningPrices.AttorneyClosing" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceInformation.SigningPrices.SingleSigning" class="control-label"></label>
        <div class="input-group">
            <span class="input-group-text">$</span>
