@model List<Company>
@{
    ViewData["Title"] = "Company List";
}
<div>
    <div class="row">
        <a class="btn btn-primary" role="button" asp-action="Create">New Company</a>
    </div>
    <p></p>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Company Name</th>
                    <th>Active</th>
                </tr>
            </thead>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td><a asp-action="edit" asp-route-id="@Model[i].Id">@Model[i].Id</a></td>
                    <td>@Model[i].General.Name</td>
                    <td>@Model[i].System.Active</td>
                </tr>
            }
        </table>
    </div>
</div> 