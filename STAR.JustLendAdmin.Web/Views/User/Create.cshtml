@model STAR.JustLendAdmin.Web.Models.UserViewModel
@{
    ViewData["Title"] = "Add User";
}

<h1>Add User</h1>
<hr />
<div class="col-11">
    <partial name="StatusMessagePartialView" for="Response" />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <partial name="DetailsPartial.cshtml" for="User" />
        <button type="submit" class="btn btn-primary">Add User</button>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/users.js" asp-append-version="false"></script>
}

