@{
    ViewData["Title"] = "Vendor List";
}

<div>
    <div class="row">
        <a class="btn btn-primary" role="button" asp-action="Create">New Vendor</a>
    </div>
    <p></p>

    <div class="form-inline">
        <div class="form-group">
            <label for="vendorSelection">Display Vendors For:</label>
