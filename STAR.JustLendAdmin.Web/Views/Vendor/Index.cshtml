@{
    ViewData["Title"] = "Vendor List";
}
<h1>Vendor List</h1>
<div class="col-11">
    <div class="row">
        <a class="btn btn-primary" role="button" asp-action="Create">New Vendor</a>
    </div>
    <p></p>

    <div class="form-group col-4">
        <label for="vendorSelection">Vendor Type</label>
        <select id="vendorSelection" class="form-select form-control" asp-items="Html.GetEnumSelectList<VendorType>()"></select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" onclick="displayVendors()">Display Vendors</button>
    </div>
    <p></p>
    <div id="gridPartialView" class="row">

    </div>
</div>

<script src="~/js/vendors.js" type="text/javascript"></script>