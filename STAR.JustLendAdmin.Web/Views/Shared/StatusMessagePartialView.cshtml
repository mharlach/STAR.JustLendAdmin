@model ResponseCore

@if(string.IsNullOrWhiteSpace(Model.Message) == false)
{
    <div class="row">
        @if(Model.Success == false)
        {
            <div class="alert alert-success" role="alert">
                @Model.Message
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                <h3>Error</h3>
                @Model.Message
            </div>
        }
    </div>
}